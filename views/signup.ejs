<style>
  body {
    background-color: black;
    background-image: url("/assets/images/Logo-text-lowopacity.png");
    /*background-image: url("/assets/images/Logo-text-white.png");
    background-position: center;
    background-attachment: fixed;
    background-size: 100%;
    background-repeat: no-repeat;
  }
  .container{
    /*background-color: #455a64;*/
    box-shadow: white;

    width: 600px;
    padding: 50px;
  }
  a {
    color: #ffd54f;
  }
  /*.my-img img {
    width: 100%;
    position: center;
    opacity: 0.8;
  }*/
  div .option {
    display: inline-block;
    text-align: left;
  }
/*~~~~~~~~~~~ for input forms ~~~~~~~~~~~~~~~~*/
  .input-field label {
    font-size: 0.8rem;
    color: white;
  }
  label {
     color: white;
  }
  input[type=text], input[type=password], input[type=email], textarea.materialize-textarea {
      border-bottom: 1px solid white;
  }
  input[type=email]:focus:not([readonly])+label, input[type=password]:focus:not([readonly])+label {
     color: #ffd54f;
   }
  input[type="radio"]:not(:checked)+label:before {
    border: 2px solid white;
  }
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/

/*~~~~~~~~~~ for horizonal line ~~~~~~~~~~~*/
  .subtitle {
  font-size: 30px;
  }
  .fancy {
    overflow: hidden;
    text-align: center;
  }
  .fancy span {
    position: relative;
  }
  .fancy span::before,
  .fancy span::after {
    line-height: 7px;
    content: "";
    position: absolute;
    border-bottom: 1px solid white;
    border-top: 1px solid white;
    width: 600px;
    height: $linesHeight;
    top: 50%;
    margin-top: floor(-$linesHeight / 2);
  }
  .fancy span:before {
    right: 100%;
    margin-right: 15px;
  }
  .fancy span:after {
    left: 100%;
    margin-left: 15px;
  }
  /*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
  .btn-center {
    text-align: center;
  }
  p {
    margin-bottom: -10px;
  }
</style>


