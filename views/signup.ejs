<div class="container">
  <div class="text-center col-md-8 col-md-offset-2">
    <br>
    <h3>SIGNUP</h4>
    <br>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">
      <form class="form-content" action="/signup" method="post">
        <div class="row">
          <div class="input-field col s6">
            <input id="username" type="text" class="input" name="name">
            <label for="username">Username</label>
          </div>
          <div class="input-field col s6">
            <input id="email" type="email" class="input" name="email">
            <label for="email">Email</label>
          </div>
        </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="input" name="password">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password_confirm" type="password" class="input">
              <label for="password_confirm">Password Confirm</label>
            </div>
          </div>

<!--~~~~~~~~~~~~~~~~~~ gender options ~~~~~~~~~~~~~~~~~~~~~~~-->
          <div class="row">
            <div class="options">
              <p class="opt-group">
                <input class="with-gap" name="group1" type="radio" id="male">
                <label for="male">Male</label>
              </p>
              <p class="opt-group">
                <input class="with-gap" name="group1" type="radio" id="female">
                <label for="female">Female</label>
              </p>
              <p class="opt-group">
                <input class="with-gap" name="group1" type="radio" id="other">
                <label for="other">Other</label>
              </p>
            </div>
          </div>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

          <!-- <button type="submit" class="btn btn-default">Join Us!</button> -->
          <button type="submit" class="btn btn-info">Join Now!</button>
        </form>
      </div>
    <br>
    <p class="subtitle fancy"><span><strong>OR</strong></span></p>
    <div class="btn-center">
      <h6> Login with </h6><br><a href="/auth/facebook" class="btn btn-primary btn-large">FACEBOOK</a>
    </div>
    <br>
    <p>Already have an account? <a href="/login">Login!</a></p>
    <p>Go back <a href="/">home.</a></p>
  </div>
