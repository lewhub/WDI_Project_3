<div class="container">
<div class="text-center col-md-8 col-md-offset-2">
    <!-- <h1><span class="fa fa-lock"></span>SpotBuds</h1> -->
    <h3>Login</h3>
    <br>
    <div class="row">
      <form class="col s12" action="/profile" method="get">
        <div class="row">
          <div class="input-field col s3">
            Email:<br>
            <input id="input-login" type="email" class="input">
          </div>
          <div class="input-field col s3">
            Password:<br>
            <input id="input-login" type="password" class="input">
          </div>
        </div>
        <button type="submit" class="btn btn-default">Sign in to site Please</button>

      </form>
    </div>

    <br>
    <br>
    <hr>
    <br>
    <h3>Signup!</h4>
    <br>
    <div class="row">
      <form class="col s12" action="/signup" method="post">
        <div class="row">
          <div class="input-field col s3">
            <input id="username" type="text" class="input">
            <label for="username">Username</label>
          </div>
          <div class="input-field col s3">
            <input id="email" type="email" class="input">
            <label for="email">Email</label>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input id="password" type="password" class="input">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="password_confirm" type="password" class="input">
              <label for="password_confirm">Password Confirm</label>
            </div>
          </div>

          <div class="row">
            <div class="options">
              <p>
                <input class="with-gap" name="group1" type="radio" id="male" />
                <label for="male">Male</label>
              </p>
              <p>
                <input class="with-gap" name="group1" type="radio" id="female" />
                <label for="female">Female</label>
              </p>
              <p>
                <input class="with-gap" name="group1" type="radio" id="other"  />
                <label for="other">Other</label>
              </p>

        </div>
        <button type="submit" class="btn btn-default">Signup Please</button>
      </form>
    </div>
    <hr>
    <h4>Or Login With <a href="/auth/facebook" class="btn btn-primary">Facebook</a></h4>
</div>
